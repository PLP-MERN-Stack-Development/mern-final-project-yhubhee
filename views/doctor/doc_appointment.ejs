<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
        <title>Book Appointment - HealingNet</title>
</head>

<body>

    <div class="container my-5">
        <h2 class="mb-4">
            My Appointments
            <a href="" target="_blank" class="btn btn-success float-end">View Schedule</a>
        </h2>

        <% if (appointments.length> 0) { %>
            <% appointments.forEach(appointment=> { %>
                <div class="card mb-3 border-light shadow">
                    <div class="card-body p-4">
                        <h5 class="card-title"> Patient's Name : <%= appointment.fullname %>
                        </h5>
                        <p class="card-text text-muted"><b>Patients Symptoms :</b>
                            <%= appointment.symptoms %>
                        </p>
                        <p class="card-text" style="word-wrap: break-word;"><b>Email:</b>
                            <%= appointment.email %>
                        </p>
                        <p class="card-text" style="word-wrap: break-word;"><b>Date :</b>
                            <%= appointment.appointmentDate.toDateString() %>
                        </p>
                        <p class="card-text" style="word-wrap: break-word;">
                            <b>Time :</b> <span class="appointment-time"
                                data-time="<%= appointment.appointmentTime %>"></span>
                        </p>
                        <p class="card-text"><b>Appointment ID:</b>
                            <%= appointment.appointment_id %>
                        </p>
                        <div class="d-flex gap-2 mt-3">
                            <% if (appointment.status.toLowerCase()==='cancelled' ) { %>
                                <span class="badge bg-danger text-white">Appointment cancelled</span>
                                <% } else { %>
                                    <a href="/consultation/live_consultation?appointmentId=<%= encodeURIComponent(appointment.appointment_id)%>&userId=<%= encodeURIComponent(user.doctor_id) %>&user=<%= encodeURIComponent(appointment.doctor) %>&role=<%= encodeURIComponent('doctor') %>"
                                        target="_blank" class="btn btn-outline-secondary btn-sm start-appointment-btn"
                                        data-date="<%= appointment.appointmentDate.toISOString() %>"
                                        data-time="<%= appointment.appointmentTime %>">
                                        Start Appointment</a>
                                    <form action="/cancel-appointment" method="POST" class="d-inline cancel-form">
                                        <input type="hidden" name="appointment_id"
                                            value="<%= appointment.appointment_id %>">
                                        <button type="submit" class="btn btn-outline-secondary btn-sm">Cancel
                                            Appointment</button>
                                    </form>
                                    <% } %>
                        </div>
                    </div>
                </div>
                <% }); %>
                    <% } else { %>
                        <div class="alert alert-warning" role="alert">
                            You have no booked appointments.
                        </div>
                        <div class="text-center mt-4">
                            <a class="btn btn-primary btn-lg" href="/ui/appointment" target="_blank">
                                <i class="fas fa-plus"></i> Create Appointment
                            </a>
                        </div>
                        <% } %>
    </div>

    <script src="/js/main.js"></script>
    <script>
        document.querySelectorAll('.appointment-time').forEach(element => {
            const serverTime = element.getAttribute('data-time');
            if (serverTime) {
                const localTime = new Date(`1970-01-01T${serverTime}Z`).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
                element.textContent = localTime;
            }
        });

        document.querySelectorAll('.cancel-form').forEach(form => {
            form.addEventListener('submit', function (e) {
                e.preventDefault();
                if (confirm('Are you sure you want to cancel this appointment?')) {
                    this.submit();
                }
            });
        });

        // Disable Start Appointment button after 30 mins past scheduled time
        document.querySelectorAll('.start-appointment-btn').forEach(btn => {
            const dateStr = btn.getAttribute('data-date'); // ISO date string
            const timeStr = btn.getAttribute('data-time'); // "HH:MM:SS"
            if (dateStr && timeStr) {
                // Combine date and time into a single Date object
                const scheduledDateTime = new Date(dateStr.split('T')[0] + 'T' + timeStr);
                const now = new Date();
                // Add 30 minutes to scheduled time
                const cutoff = new Date(scheduledDateTime.getTime() + 30 * 60000);
                if (now > cutoff) {
                    btn.classList.add('disabled');
                    btn.setAttribute('aria-disabled', 'true');
                    btn.textContent = "Session Expired";
                    btn.removeAttribute('href');
                    btn.style.pointerEvents = "none";
                }
            }
        });
    </script>
</body>
<script src="/js/main.js"></script>

</html>